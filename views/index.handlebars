<div class="container-fluid full-width">
  <div class="row">
    <div class="col-md-5">
      {{#each burgers}}
      {{#unless this.devoured}}

      <form action="/burgers/{{this.id}}" method="POST">
        <li class="form-control">{{id}}. {{burger_name}}</li>
        <span class="input-group-btn">
          <button class="btn btn-success devour-button" type="submit">Devour It!</button>
        </span>
      </form>
    </div>

    {{/unless}}
    {{/each}}
  </div>

  <div class="col-md-5">
    {{#each burgers}}
    {{#if this.devoured}}
    <div class='burgerEaten'>
      <div>
        {{this.id}}.  {{this.burger_name}}
      </div>
    </div>
    {{/if}}
    {{/each}}
  </div>
</div>
</div>

<div class="row">
  <div class="col-lg-">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name">
      <button type="submit" class="addBurger">Add The Burger</button>
    </form>
  </div>
</div>
</div>